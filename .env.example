# --- Application ---
# Frontend (Next.js) - URL of the Backend API
# For local dev: http://127.0.0.1:8000 (handled by Next.js rewrite usually)
# For Vercel/Production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=

# Port for the backend service (Railway sets this automatically)
PORT=8000

# --- Database (Supabase) ---
# Project URL (e.g. https://xyz.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=
# Anon Key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service Role Key (backend only - KEEP SECRET)
SUPABASE_SERVICE_ROLE=
# Schema Name (used for multi-tenancy in same DB)
SUPABASE_SCHEMA=contractcoach

# --- Cache (Upstash Redis) ---
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
# Prefix for keys to avoid collisions
REDIS_PREFIX=contractcoach

# --- AI (OpenAI) ---
OPENAI_API_KEY=

# --- Auth & Storage (Google Drive) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Redirect URI (must match Google Console)
# Local: http://localhost:3000/auth/google/callback
# Prod: https://your-app.com/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# --- Deployment (Railway) ---
# Public domain of the web/api service
RAILWAY_PUBLIC_DOMAIN=
